import java.util.Scanner;

public class calculadoraSimples {
    public static void main(String[] args) {
        // Criar um objeto Scanner para receber entradas
        Scanner scanner = new Scanner(System.in);

        // Pedir o primeiro número inteiro
        System.out.print("Digite o primeiro número inteiro: ");
        int numero1 = scanner.nextInt();

        // Pedir ao usuário o segundo número inteiro
        System.out.print("Digite o segundo número inteiro: ");
        int numero2 = scanner.nextInt();

        // Realizar as operações de soma, subtração e mutiplicação com os números fornecidos
        int soma = numero1 + numero2;
        int subtracao = numero1 - numero2;
        int multiplicacao = numero1 * numero2;

        // Verificar se o denominador é zero antes de dividir
        if (numero2 != 0) {
            double divisao = (double) numero1 / numero2;
            System.out.println("Divisão: " + divisao);
        } else {
            System.out.println("Divisão: Não é possível dividir por zero.");
        }

        // Printar os resultados
        System.out.println("Soma: " + soma);
        System.out.println("Subtração: " + subtracao);
        System.out.println("Multiplicação: " + multiplicacao);


        scanner.close();
    }
}
